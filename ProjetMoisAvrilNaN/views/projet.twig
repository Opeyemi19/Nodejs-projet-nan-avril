{% extends 'layout.twig' %}


{% block body %}
<section class="imgPageProjet">
    <div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% if error  %}
                <div class="alert alert-danger">
                    <ul>
                        {% for valid in error %}
                        <li>{{valid.msg}}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <div class="card formProjet animated zoomIn">
                <div class="card-body">
                    <form action="/projet" method="post">
                        <div class="form-group">
                            <h2 class="text-center">Formulaire Projets</h2>
                            <label>Nom et Prenom</label>
                            <input type="text" name="FullName" value="{{Addpro.FullName}}" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <label>Email SVP</label>
                            <input name="Email" type="text" value="{{Addpro.Email}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Telephone</label>
                            <input type="text" name="phoneNumber" value="{{Addpro.phoneNumber}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Ville Projet</label>
                            <input type="text" name="ville_projet" value="{{Addpro.ville_projet}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Commune Projet</label>
                            <input name="commune_projet" type="text" value="{{Addpro.commune_projet}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Quartier Projet</label>
                            <input name="quartier_projet" type="text" value="{{Addpro.quartier_projet}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-success form-control">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
{% endblock %}