{% extends 'layout.twig' %}

{% block body %}
<section class="imageArr">
    <div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto sign animated flipInY">
            <div class="text-center">
                    <h3>SignUp</h3>
                    <form action="/Sign/signup" method="post">
                        <div class="form-group">
                            <label>Nom et Prenom</label>
                            <input type="text" name="fullname" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control">
                        </div>
                        {# <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="Password" name="ConfirmPassword" class="form-control">
                        </div> #}
                        <div class="form-group">
                            <label>Habitation</label>
                            <input type="text" name="Lieu_Habitation" class="form-control">
                        </div>
                        <input type="hidden" value="0" name="statut">
                        <div class="form-group">
                            <button type="submit" class="">
                                SignUp
                            </button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>
</section>
{% endblock %}