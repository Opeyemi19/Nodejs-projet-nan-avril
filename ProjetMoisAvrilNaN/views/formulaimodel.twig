{% extends 'layout.twig' %}


{% block body %}
<section class="imgformModel">
    <div class="container p-4" style="background-image: url('img/constructeur-maison-16-angouleme.jpg')">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% if errors  %}
                <div class="alert alert-danger">
                    <ul>
                        {% for elemen in errors %}
                        <li>{{elemen.msg}}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <div class="card formModel animated fadeInDown">
                <div class="card-body">
                    <form action="" method="post">
                        <h2 class="text-center">Formulaire Modeles</h2>
                        <div class="form-group">
                            <label>Nom et Prenom</label>
                            <input type="text" name="FullName" value="{{inmodel.FullName}}" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <label>No Telephone</label>
                            <input type="text" name="Telephone" value="{{inmodel.Telephone}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Email SVP</label>
                            <input name="Email" type="text" value="{{inmodel.Email}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Lieu habitation</label>
                            <input name="Lieu_habitation" value="{{inmodel.Lieu_habitation}}" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-success form-control">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
{% endblock %}