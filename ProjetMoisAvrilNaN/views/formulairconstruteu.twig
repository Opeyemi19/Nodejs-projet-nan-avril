{% extends 'layout.twig' %}


{% block body %}
<section class="imgformConst">
    <div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% if errors  %}
                <div class="alert alert-danger">
                    <ul>
                        {% for elemen in errors %}
                        <li>{{elemen.msg}}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <div class="card formConstr animated fadeInDown">
                <div class="card-body">
                    <form action="" method="post">
                        <h2 class="text-center">Formulaire Constructeurs</h2>
                        <div class="form-group">
                            <label>Nom et Prenom</label>
                            <input type="text" name="FullName" value="{{contaProje.FullName}}" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <label>No Telephone</label>
                            <input type="text" name="Telephone" value="{{contaProje.Telephone}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Email SVP</label>
                            <input name="Email" type="text" value="{{contaProje.Email}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Localisation du Projet</label>
                            <input name="Localisation_Projet" type="text" value="{{contaProje.Localisation_Projet}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Votre Pr√©occupation</label>
                            <textarea name="Question_Poser" cols="30" rows="3" class="form-control">{{contaProje.Question_Poser}}</textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-success form-control">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
{% endblock %}