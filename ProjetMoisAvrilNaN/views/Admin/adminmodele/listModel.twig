{% extends 'Admin/layoutAdmin.twig' %}


{% block body %}
<section class="adminbagr" style="">
<div class="container-fluid p-4">
    <div class="row">
        <div class="col-md-2 col-sm-4 col-xs-12 col-12">
            <button type="button" class="btn btn-premium"><a href="/Admins/modele/addModele">Ajouter Modele</a></button>
            {# <button type="button" class="btn btn-outline-warning btn-block"><a class="nav-link" href="#">Modifier Constructeur</a></button>
            <button type="button" class="btn btn-outline-danger btn-block"><a class="nav-link" href="#"></a>Supprimer Constructeur</button> #}
        </div>
        <div class="col-md-10 col-sm-8 col-xs-12 col-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nom Model</th>
                        <th>Superficie</th>
                        <th>Nombres Chambres</th>
                        <th class="text-center">Images</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Outils</th>
                    </tr>
                </thead>
                {% for data in Modmaison %}
                    <tbody>
                        <tr>
                            <td>{{data.Nom_maison}}</td>
                            <td>{{data.Superficie_maison}} km2</td>
                            <td>{{data.Nbre_chambres}}</td>
                            <td>
                                <div class="d-flex">
                                    <img src="../../../uploads/{{data.Image1}}" alt="" class="mr-2" style="width:100px; height:100px">
                                    <img src="../../../uploads/{{data.Image2}}" alt="" class="mr-2" style="width:100px; height:100px">
                                    <img src="../../../uploads/{{data.Image3}}" alt="" class="mr-2" style="width:100px; height:100px">
                                </div>
                            </td>
                            <td>{{data.Description}}</td>
                            <td>{{data.Prix}} Fcfa</td>  
                            <td>
                                <div class="d-flex">
                                    <a href="/Admins/modele/editModel/{{data.id}}" class="btn btn-warning mr-2">Edit</a> 
                                    <a href="/Admins/modele/delete/{{data.id}}" class="btn btn-danger">Delete</a> 
                                </div>  
                            </td>                  
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
</div>
</section>
{% endblock %}