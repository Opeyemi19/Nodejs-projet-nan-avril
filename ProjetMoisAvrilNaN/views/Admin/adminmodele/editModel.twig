{% extends 'Admin/layoutAdmin.twig' %}


{% block body %}
<section style=" background-image: url('../../../img/imgdash.jpg'); background-position: center center; background-repeat: no-repeat; background-size: cover;">
<div class="container-fluid p-4">
        <div class="row">
            <div class="col-md-2 col-sm-4 col-xs-12 col-12">
                {# <button type="button" class="btn btn-outline-primary"><a href="/Admins/constructeur/addConstruc" class="nav-link">Ajouter Constructeur</a></button> #}
            </div>
            <div class="col-md-6 col-sm-8 col-xs-12 col-12 mx-auto">
                <div class="card animated fadeInDown" style="background: rgba(0, 0, 0, 0.8);">
                    <div class="card-body">
                         <form action="/Admins/modele/editModel/{{maison.id}}" method="post">
                         <h2><span class="text-white text-center">Formulaire Modification Modele</span></h2>
                        <div class="form-group">
                            <label class="text-white">Nom Maison</label>
                            <input type="text" name="Nom_maison" value="{{maison.Nom_maison}}" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <label class="text-white">Superficie Maison</label>
                            <input type="text" name="Superficie_maison" class="form-control" value="{{maison.Superficie_maison}}">
                        </div>
                        <div class="form-group">
                            <label class="text-white">Nombre de Chambre</label>
                            <input name="Nbre_chambres" type="text" class="form-control" value="{{maison.Nbre_chambres}}">
                        </div>
                        <div class="form-group">
                            <label class="text-white">Description Maison</label>
                            <textarea name="Description" cols="30" rows="3" class="form-control">{{maison.Description}}</textarea>
                        </div>
                        <div class="form-group">
                            <label class="text-white">Prix Maison</label>
                            <input name="Prix" type="text" class="form-control" placeholder="Nombre Agence" value="{{maison.Prix}}">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-success form-control">Save</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
</div>
</section>
{% endblock %}