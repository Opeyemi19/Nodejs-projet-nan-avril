{% extends 'Admin/layoutAdmin.twig' %}


{% block body %}
<section class="adminbagr" style="">
    <div class="container-fluid p-4">
    <div class="row">
        <div class="col-md-2 col-sm-4 col-xs-12 col-12">
            <button type="button" class="btn btn-premium"><a href="/Admins/constructeur/addConstruc">Ajouter Constructeur</a></button>
        </div>
        <div class="col-md-10 col-sm-8 col-xs-12 col-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Logo</th>
                        <th>Nom Constructeur</th>
                        <th>Localisation</th>
                        <th>Description</th>
                        <th>Date de Creaction</th>
                        <th>Agences</th>
                        <th>Outils</th>
                    </tr>
                </thead>
                {% for data in condb %}
                    <tbody>
                        <tr>
                            <td><img src="../../../uploads/{{data.LogoConstr1}}" alt="" class="" style="width:50px; height:50px"></td>
                            <td>{{data.Nom_constructeur}}</td>
                            <td>{{data.Localisation}}</td>
                            <td>{{data.description}}</td>
                            <td>{{data.date_Creat_Constr}}</td>
                            <td>{{data.Nbre_Agence}}</td>  
                            <td>
                                <div class="d-flex">
                                    <a href="/Admins/constructeur/editConstru/{{data.id}}" class="btn btn-warning mr-2">Edit</a> 
                                    <a href="/Admins/constructeur/delete/{{data.id}}" class="btn btn-danger">Delete</a> 
                                </div>  
                            </td>                  
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
</section>
{% endblock %}